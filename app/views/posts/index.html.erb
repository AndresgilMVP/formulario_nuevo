<h1>Posts#index</h1>

<table>
  <thead>
    <th>Author</th>
    <th>Title</th>
    <th>Contenido</th>
    <th>Opciones</th>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.author %></td>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <td>
          <%= link_to 'Ver', post %>
          <%= link_to 'Editar', edit_post_path(post) %>
          <%= link_to 'Eliminar', post, method: :delete, data: { confirm: 'Estas seguro de eliminar este post?' }%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


<%= link_to 'new', new_post_path %>
